{
  "name": "nature-remo",
  "description": "Nature Remo API client",
  "version": "0.3.1",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "shx rm -r ./lib && tsc",
    "docs": "yarn build && typedoc --mode file --out docs --excludeExternals  --excludePrivate --exclude '**/__tests__/*' src && touch ./docs/.nojekyll",
    "format": "prettier 'src/**/*.ts' --write",
    "lint": "tslint --project ./tsconfig.json --fix",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "@types/nock": "^9.3.1",
    "@types/node": "^11.10.4",
    "husky": "^1.3.1",
    "jest": "24.1.0",
    "lint-staged": "^8.1.5",
    "nock": "^10.0.6",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "bugs": {
    "url": "https://github.com/uetchy/nature-remo/issues"
  },
  "engines": {
    "node": ">=8.14.3"
  },
  "files": [
    "lib/*.js",
    "lib/*.d.ts"
  ],
  "homepage": "https://github.com/uetchy/nature-remo",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "yarn test"
    }
  },
  "keywords": [
    "nature-remo",
    "smart-home"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uetchy/nature-remo.git"
  }
}
