{
  "name": "nature-remo",
  "description": "Nature Remo API client",
  "version": "1.2.3",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "scripts": {
    "build": "npm run bundle -- --minify --dts",
    "clean": "shx rm -rf lib",
    "dev": "npm run bundle -- --watch",
    "docs": "typedoc --mode file --out docs --excludeExternals --excludePrivate --exclude '**/__tests__/*' src && shx touch ./docs/.nojekyll",
    "docs1": "typedoc --entryPoints \"src\" --out docs --readme none --excludeExternals --excludePrivate --exclude \"**/__tests__/*\" && shx touch ./docs/.nojekyll",
    "docs2": "typedoc --entryPoints \"src\" --out docs --excludeExternals --excludePrivate --exclude \"**/__tests__/*\" && shx touch ./docs/.nojekyll",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "release-it",
    "test": "jest --coverage",
    "bundle": "tsup src/index.ts -d lib"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.41",
    "codacy-coverage": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "26.6.3",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.11",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "shx": "^0.3.3",
    "ts-jest": "^26.5.5",
    "tsup": "^4.9.2",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm test"
    }
  },
  "homepage": "https://github.com/uetchy/nature-remo",
  "repository": {
    "type": "git",
    "url": "https://github.com/uetchy/nature-remo.git"
  },
  "bugs": {
    "url": "https://github.com/uetchy/nature-remo/issues"
  },
  "license": "MIT",
  "keywords": [
    "nature-remo",
    "smart-home"
  ],
  "engines": {
    "node": ">=8.14.3"
  }
}
