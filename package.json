{
  "name": "nature-remo",
  "description": "Nature Remo API client",
  "version": "1.2.3",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io/)",
  "scripts": {
    "build": "npm run tsup -- --minify --dts",
    "clean": "shx rm -rf lib",
    "dev": "npm run tsup -- --watch",
    "docs": "typedoc --mode file --out docs --excludeExternals --excludePrivate --exclude '**/__tests__/*' src && shx touch ./docs/.nojekyll",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "release-it",
    "test": "jest --coverage",
    "tsup": "tsup src/index.ts -d lib"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "dependencies": {
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/nock": "^11.1.0",
    "@types/node": "^16.0.1",
    "codacy-coverage": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "27.0.6",
    "lint-staged": "^11.0.0",
    "nock": "^13.1.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "shx": "^0.3.2",
    "ts-jest": "^27.0.3",
    "tsup": "^4.12.5",
    "typedoc": "^0.21.2",
    "typescript": "^4.3.5"
  },
  "homepage": "https://github.com/uetchy/nature-remo",
  "repository": {
    "type": "git",
    "url": "https://github.com/uetchy/nature-remo.git"
  },
  "bugs": {
    "url": "https://github.com/uetchy/nature-remo/issues"
  },
  "license": "MIT",
  "keywords": [
    "nature-remo",
    "smart-home"
  ],
  "engines": {
    "node": ">=8.14.3"
  }
}
